<configs>

<!--
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
									Silencer Sounds
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->

<!-- Hands --> 

<append xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']">
	<item_property_overrides name="Glock 40">
		<property name="Sound_start" value="silencehigh1"/>
	</item_property_overrides>
	
	<item_property_overrides name="1911">
		<property name="Sound_start" value="silencelow"/>
			<property name="BarrelScale" value=".3,.3,.3"/>
	</item_property_overrides>
	
	<item_property_overrides name="338 Snubnose">
		<property name="Sound_start" value="silencehigh1"/>
	</item_property_overrides>
	
	<item_property_overrides name="Klob">
		<property name="Sound_start" value="silencehigh1"/>
	</item_property_overrides>
	
	<item_property_overrides name="Uzi">
		<property name="Sound_start" value="silenceauto"/>
	</item_property_overrides>
	
	<item_property_overrides name="Spaz12">
		<property name="Sound_start" value="silencespaz"/>
	</item_property_overrides>
	
	<item_property_overrides name="SCAR">
		<property name="Sound_start" value="silencehigh"/>
	</item_property_overrides>
	
	<item_property_overrides name="AR15">
		<property name="Sound_start" value="silencelow"/>
	</item_property_overrides>
	
	<item_property_overrides name="M4A1">
		<property name="Sound_start" value="silencedeep"/>
	</item_property_overrides>
</append>


